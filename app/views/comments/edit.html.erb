<!-- Validation failure messages -->

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Comment #<%= @comment.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_comment/<%= @comment.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @comment.user_id %>">
            </div>
          </div>

          <!-- Label and input for calendar_id -->
          <div class="form-group">
            <label for="calendar_id" class="col-sm-2 control-label">
              Calendar
            </label>
            <div class="col-sm-10">
              <input type="text" id="calendar_id" name="calendar_id" placeholder="Calendar" class="form-control" value="<%= @comment.calendar_id %>">
            </div>
          </div>

          <!-- Label and input for event_id -->
          <div class="form-group">
            <label for="event_id" class="col-sm-2 control-label">
              Event
            </label>
            <div class="col-sm-10">
              <input type="text" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @comment.event_id %>">
            </div>
          </div>

          <!-- Label and input for body -->
          <div class="form-group">
            <label for="body" class="col-sm-2 control-label">
              Body
            </label>
            <div class="col-sm-10">
              <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @comment.body %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Comment
              </button>
              or
              <a href="/comments/<%= @comment.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
