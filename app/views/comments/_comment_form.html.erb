
        <form action="/create_comment" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          <div class="form-group">
              <input name="user_id" type="hidden" value="<%= current_user.id %>">
              <input name="calendar_id" type="hidden" value="<%= params[:id] %>">
              <input name="event_id" type="hidden" value="<%= @event.id %>">
              <input name="activity_id" type="hidden" value="<%= @activity.id %>">
              <textarea id="body" name="body" class="form-control" rows="1"><%= @comment.body %></textarea><button class="btn btn-success btn-block">Add Comment</button>
          </div>
        </form>

