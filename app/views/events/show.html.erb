<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Event #<%= @event.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User</dt>
              <dd><%= @event.user_id %></dd>

              <dt>Calendar</dt>
              <dd><%= @event.calendar_id %></dd>

              <dt>Name</dt>
              <dd><%= @event.name %></dd>

              <dt>Starting time</dt>
              <dd><%= @event.starting_time %></dd>

              <dt>Ending time</dt>
              <dd><%= @event.ending_time %></dd>

              <dt>Description</dt>
              <dd><%= @event.description %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/events" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/events/<%= @event.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_event/<%= @event.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Validation failure messages -->
<% @comment = Comment.new %>

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Comment</h3>
      </div>
      <div class="panel-body">
        <form action="/create_comment" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">




          <!-- Label and input for body -->
          <div class="form-group">
            <div class="col-sm-10">
              <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @comment.body %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Comment
              </button>
              or
              <a href="/comments">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

