<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-8 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Event #<%= event.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= event.name %></dd>

              <dt>Starting time</dt>
              <dd><%= event.starting_time %></dd>

              <dt>Ending time</dt>
              <dd><%= event.ending_time %></dd>

              <dt>Description</dt>
              <dd><%= event.description %></dd>
            </dl>

          </div>
        </div>
      </div>
    </div>
  </div>
<% @comments = Comment.where(:user_id => "#{current_user.id}", :calendar_id => "#{params[:id]}", :event_id => "#{event.id}") %>

  <div class="col-sm-4 col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">Comments</div>
    <% @comments.each do |comment| %>
    <ul class="list-group">
      <li class="list-group-item"><h6><%= comment.user.username %>: <%= comment.body %></h6></li>
    </ul>
    <% end %>
  </div>
</div>
</div>
</div>

<!-- Validation failure messages -->
<% @comment = Comment.new %>

<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->
<div class="row">
  <div class="col-sm-offset-8 col-sm-4 col-md-offset-6 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Comment</h3>
      </div>
      <div class="panel-body">
        <form action="/create_comment" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <div class="form-group">
            <div class="col-sm-10">
              <input name="user_id" type="hidden" value="<%= current_user.id %>">
              <input name="calendar_id" type="hidden" value="<%= params[:id] %>">
              <input name="event_id" type="hidden" value="<%= event.id %>">
              <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @comment.body %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Comment
              </button>
              or
              <a href="/comments">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

