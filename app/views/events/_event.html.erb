
<div class="row">
  <div class="col-sm-8 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Event #<%= event.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= event.name %></dd>

              <dt>Starting time</dt>
              <dd><%= event.starting_time %></dd>

              <dt>Ending time</dt>
              <dd><%= event.ending_time %></dd>

              <dt>Description</dt>
              <dd><%= event.description %></dd>
            </dl>

          </div>
        </div>
      </div>
    </div>
  </div>
