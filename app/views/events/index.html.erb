
<div class="container">
  <h1>Howdy <%= current_user.username %></h1>

  <div class ="row">
    <div class ="col-md-12">
      <ul class="media-list">

        <% @events.each do |event| %>
        <% @activities = Activity.where(:user_id => "#{current_user.id}", :event_id => "#{event.id}") %>

        <li class="media">
          <div class="media-left">
            <img class="media-object" width="64" height="64" src="<%= event.image %>" alt="...">
          </div>

          <div class="media-body">
            <h4 class="media-heading"><strong><%= event.name %></strong> <%= local_time(event.starting_time,"%B %e, %Y at %l:%M%P") %> - <%= local_time(event.ending_time,"%B %e, %Y at %l:%M%P") %></h4>
            <% activity_count = [] %>
            <div class="btn-group" role="group" aria-label="...">

            <!-- I will need to create a variable href for each button in order to open up a modal of the index of activities for each event -->

              <button type="button" class="btn btn-default" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                <% @activities.each do |activity| %>
                <% activity_count.push activity %>
                <% end %>
                <span class ="badge"><%= activity_count.size  %></span> Activites
              </button>
              <button type="button" class="btn btn-default"><i class="fa fa-plus"></i> Activity</button>
            </div>

            <div class="collapse" id="collapseExample">
              <ul class="list-group">
                <% @activities.each do |activity| %>
                <li class ="list-group-item">
                <a href="#"><i class="fa fa-edit fa-lg"></i></a>
                <strong><%= activity.name %></strong> <%= local_time(activity.starting_time," from %B %e  at %l:%M%P") %> - <%= local_time(event.ending_time," till %B %e at %l:%M%P") %>


                  <a href="#myModal" data-toggle="modal" data-target="#myModal"<span class="badge"><i class="fa fa-comments-o fa-lg"></i>10</span></a>



                  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                        </div>
                        <div class="modal-body">
                          ...
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                      </div>
                    </div>
                  </div>

                </li>
                <% end %>
              </ul>
            </div>

          </li>

          <% end %>
        </ul>
      </div>
    </div>
  </div>


