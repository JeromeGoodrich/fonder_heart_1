<div class="page-header">
  <h1>
    Welcome <%= current_user.username %>
    <a href="/calendars/new" class="btn btn-lg btn-success"><i class="fa fa-plus"> Create a Calendar</i></a>
  </h1>
</div>
<% if @calendars.count != 0  %>

<% @shared_calendars = current_user.calendar_accesses %>

<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#my_calendars" aria-controls="my_calendars" role="tab" data-toggle="tab">My Calendars</a></li>
    <li role="presentation"><a href="#shared_with_me" aria-controls="shared_with_mw" role="tab" data-toggle="tab">Shared With Me</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="my_calendars">
    <br>
      <div class="row isotope-container">
      <% @calendars.each do |calendar| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
          <div class="panel panel-default">
      <div class="panel-heading">
        <a class="btn btn-primary btn-block btn-lg" href="calendars/<%= calendar.id %>" role="button">
          <h3 class="panel-title"><%= calendar.title.upcase %></h3>
        </a>
      </div>
      <div class="panel-body">
        <p class="text-center"><%= calendar.description %></p>
      </div>
    </div>
  </div>
<% end %>
</div>
<% else %>
<h1>Create a new calendar to get started</h1>
<% end %>
</div>
    <div role="tabpanel" class="tab-pane" id="shared_with_me">
    <div class="row isotope-container">
    <br>
      <% @shared_calendars.each do |shared_calendar| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
          <div class="panel panel-default">
      <div class="panel-heading">
        <a class="btn btn-primary btn-block btn-lg" href="calendars/<%= shared_calendar.calendar_id %>" role="button">
          <h3 class="panel-title"><%= shared_calendar.calendar.title.upcase %></h3>
        </a>
      </div>
      <div class="panel-body">
        <p class="text-center"><%= shared_calendar.calendar.description %></p>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>

</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
