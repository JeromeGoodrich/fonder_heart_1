<!-- Validation failure messages -->

<% if @activity.errors.any? %>
  <% @activity.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Activity #<%= @activity.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_activity/<%= @activity.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @activity.name %>">
            </div>
          </div>

          <!-- Label and input for starting_time -->
          <div class="form-group">
            <label for="starting_time" class="col-sm-2 control-label">
              Starting time
            </label>
            <div class="col-sm-10">
              <input type="text" id="starting_time" name="starting_time" placeholder="Starting time" class="form-control" value="<%= @activity.starting_time %>">
            </div>
          </div>

          <!-- Label and input for ending_time -->
          <div class="form-group">
            <label for="ending_time" class="col-sm-2 control-label">
              Ending time
            </label>
            <div class="col-sm-10">
              <input type="text" id="ending_time" name="ending_time" placeholder="Ending time" class="form-control" value="<%= @activity.ending_time %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @activity.user_id %>">
            </div>
          </div>

          <!-- Label and input for event_id -->
          <div class="form-group">
            <label for="event_id" class="col-sm-2 control-label">
              Event
            </label>
            <div class="col-sm-10">
              <input type="text" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @activity.event_id %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @activity.description %></textarea>
            </div>
          </div>

          <!-- Label and input for image -->
          <div class="form-group">
            <label for="image" class="col-sm-2 control-label">
              Image
            </label>
            <div class="col-sm-10">
              <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @activity.image %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Activity
              </button>
              or
              <a href="/activities/<%= @activity.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
