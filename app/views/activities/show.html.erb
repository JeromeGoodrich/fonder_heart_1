<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Activity #<%= @activity.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @activity.name %></dd>

              <dt>Starting time</dt>
              <dd><%= @activity.starting_time %></dd>

              <dt>Ending time</dt>
              <dd><%= @activity.ending_time %></dd>

              <dt>User</dt>
              <dd><%= @activity.user_id %></dd>

              <dt>Event</dt>
              <dd><%= @activity.event_id %></dd>

              <dt>Description</dt>
              <dd><%= @activity.description %></dd>

              <dt>Image</dt>
              <dd><%= @activity.image %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/activities" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/activities/<%= @activity.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_activity/<%= @activity.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
